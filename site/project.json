{
  "name": "site",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "site/src",
  "prefix": "lpj",
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "options": {
        "outputPath": {
          "base": "site/dist/"
        },
        "index": "site/src/index.html",
        "polyfills": ["zone.js"],
        "tsConfig": "site/tsconfig.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "{workspaceRoot}/node_modules/@taiga-ui/icons/src",
            "output": "assets/taiga-ui/icons"
          },
          {
            "glob": "README.md",
            "input": "{workspaceRoot}/packages/core",
            "output": "assets/docs/core"
          },
          {
            "glob": "**/*",
            "input": "{workspaceRoot}/packages/core/guides",
            "output": "assets/docs/core/guides"
          },
          {
            "glob": "README.md",
            "input": "{workspaceRoot}/packages/angular",
            "output": "assets/docs/angular"
          },
          {
            "glob": "**/*",
            "input": "{workspaceRoot}/packages/angular/guides",
            "output": "assets/docs/angular/guides"
          }
        ],
        "styles": ["site/src/styles.less"],
        "scripts": [],
        "browser": "site/src/main.ts"
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1.5mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "12kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        },
        "production-budget-debug": {
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular/build:dev-server",
      "configurations": {
        "production": {
          "browserTarget": "site:build:production"
        },
        "development": {
          "browserTarget": "site:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "deploy": {
      "executor": "angular-cli-ghpages:deploy"
    }
  }
}
